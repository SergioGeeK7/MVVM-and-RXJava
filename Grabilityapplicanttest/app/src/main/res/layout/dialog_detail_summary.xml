<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="entry"
            type="com.santiagoalvarez.grabilityapplicanttest.model.Entry"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:title="@{entry.getImName().getLabel()}">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/default_medium_size"
                android:src="@drawable/ic_copyright_black_24dp"/>
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_detail_horizontal_margin"
            android:fillViewport="true"
            android:padding="@dimen/default_large_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{entry.getTitle().getLabel()}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_large_size"
                    android:text="@{entry.getSummary().getLabel()}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>